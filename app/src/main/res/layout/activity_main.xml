<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lipeng.newapp.activity.MainActivity">

    <com.youth.banner.Banner
        android:id="@+id/banner_top_stories"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:title_textsize="25sp"
        app:indicator_height="20dp"
        app:indicator_width="20dp"
        app:indicator_drawable_selected="@drawable/ts_selected"
        app:indicator_drawable_unselected="@drawable/ts_default"
        app:banner_default_image="@drawable/loading_bg">

    </com.youth.banner.Banner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_news"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</LinearLayout>
