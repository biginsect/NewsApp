<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#5CACEE"
    android:layout_height="50dp">

    <Button
        android:id="@+id/header_title_back_btn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/main_activity_title_back_btn"/>

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_toRightOf="@+id/header_title_back_btn"
        android:layout_toEndOf="@+id/header_title_back_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/header_title_more_btn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/main_activity_header_more_setting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>